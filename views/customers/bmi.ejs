<%- include('../partials/header') %>
    <div id="MAIN">
        <h1 id="logH1">Enter the following to update your health log:</h1>
    <form id='logForm' action="/customers" method="post">
        <input id="height"
               name="height"
               required
               placeholder="Enter your height(m)" />
        <br />
        <input id="weight"
               name="weight"
               required
               placeholder="Enter your weight(kg)" />
        <br />
        <input id="mood"
               name="mood"
               required
               placeholder="How are you feeling today?" />
        <br />
        <label for="cars">Choose a car:</label>
            <select name="cars" id="cars">
                <option value="volvo">Volvo</option>
                <option value="saab">Saab</option>
                <option value="mercedes">Mercedes</option>
                <option value="audi">Audi</option>
            </select>
              <input id="exercise-type"
               name="type"
               required
               placeholder="type" />
        <br />
         <input id="exercise-duration"
               name="duration"
               required
               placeholder="duration, minutes" />
        <br />
        <button class="btn"
                type="submit">SAVE</button>
    </form>
</div>
    <% if(bmi != 567){ %>
        <p>Your BMI is <%= bmi %></p>
    <% }else{ %>
        <p></p>
    <% } %>
<%- include('../partials/footer') %>